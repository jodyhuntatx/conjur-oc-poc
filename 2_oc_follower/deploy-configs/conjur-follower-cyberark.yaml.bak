---
apiVersion: v1
kind: Service
metadata:
  name: conjur-follower
  labels:
    app: conjur-follower
spec:
  ports:
  - port: 443
    name: https
  selector:
    app: conjur-follower
  type: LoadBalancer
---
apiVersion: v1
kind: DeploymentConfig
metadata:
  name: conjur-follower
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: conjur-follower
        name: conjur-follower
        role: follower
    spec:
      serviceAccountName: conjur-cluster
      hostAliases:
      - ip: "192.168.99.100"
        hostnames:
        - "conjur-master"
      volumes:
      - name: seedfile
        emptyDir:
          medium: Memory
      - name: conjur-token
        emptyDir:
          medium: Memory

      initContainers:
      - name: authenticator
        image: 172.30.1.1:5000/cyberark/seed-fetcher:cyberark
        imagePullPolicy: 
        env:

        # hardcoded values
          - name: FOLLOWER_HOSTNAME
            value: conjur-follower # this should be the same value as the service name
          - name: SEEDFILE_DIR
            value: /tmp/seedfile

        # values from metaadata
          - name: MY_POD_NAME
            valueFrom:
              fieldRef:
                fieldPath: metadata.name
          - name: MY_POD_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
          - name: MY_POD_IP
            valueFrom:
              fieldRef:
                fieldPath: status.podIP

        # values from Conjur config map
          - name: CONJUR_SEED_FILE_URL
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: conjur-seed-file-url
          - name: AUTHENTICATOR_ID
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: authenticator-id
          - name: CONJUR_ACCOUNT
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: conjur-account
          - name: CONJUR_SSL_CERTIFICATE
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: master-certificate
          - name: CONJUR_AUTHN_LOGIN
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: conjur-authn-login-cluster

        volumeMounts:
          - name: seedfile
            mountPath: /tmp/seedfile
          - name: conjur-token
            mountPath: /run/conjur

      containers:
      - name: conjur-appliance
        command: ["/tmp/seedfile/start-follower.sh"]
        image: 172.30.1.1:5000/cyberark/conjur-appliance:cyberark
        imagePullPolicy: 
        env:
          - name: CONJUR_MASTER_PORT
            value: "30443"
          - name: SEEDFILE_DIR
            value: /tmp/seedfile
          - name: CONJUR_AUTHENTICATORS
            valueFrom:
              configMapKeyRef:
                name: conjur-config
                key: conjur-authenticators
        resources:
          requests:
            cpu: "1"
            memory: 4Gi
          limits:
            cpu: "1"
            memory: 4Gi
        ports:
        - containerPort: 443
          name: https
        - containerPort: 5432
          name: pg-main
        - containerPort: 1999
          name: pg-audit
        volumeMounts:
          - name: seedfile
            mountPath: /tmp/seedfile
            readOnly: true
